<table>
  <tr>
    <th>Age</th>
    <th>Color</th>
    <th>Name</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td> <%= @cat.age %> </td>
    <td> <%= @cat.color %> </td>
    <td> <%= @cat.name %> </td>
    <td> <%= @cat.sex %> </td>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order(start_date: :asc).each do |request| %>
    <tr>
      <td>
        <%= request.start_date %>
      </td>
      <td>
        <%= request.end_date %>
      </td>
      <td>
        <%= request.status %>
      </td>
      <td>
        <form action="<%= approve_cat_rental_request_url(request.id) %>" method="POST">
          <input type="hidden" name="_method" value="PATCH">
          <button> Approve! </button>
        </form>
      </td>
      <td>
        <form action="<%= deny_cat_rental_request_url(request.id) %>" method="POST">
          <input type="hidden" name="_method" value="PATCH">
          <button> Deny! </button>
        </form>
      </td>
    </tr>
  <% end %>
</table>

<!-- goes to POST verb -->
